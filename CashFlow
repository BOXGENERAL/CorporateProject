public class CashFlow 
   {
      private double profit, interest, cash;
      private  String paydate;
      private final int MONTH= 12;
   
       public double getProfit ()
      {
         return profit;
      }
   
       public void getProfit (double p)
      {
         profit= p;
      }
   
       public double calculateprofit()
      {
         profit+= (cash/profit)*100;  //calculating the total profit of each year
         return profit;
      }
   
       public double calculateCompoundInterest()
      {
         interest+= Math.pow((cash*(1+interest/4)), 16);	    //calculating the interest in quaterly of one year
         return interest;
      }
   
       public double calculateMonthlyPayment()
      {
         cash+= Math.pow((cash*(1+interest/MONTH)), interest*MONTH); 	//calculating the profit for each month 
         return cash;
      }
   
       public String toString()
      {
         String c= "The compound interest is: "+interest+"\nThe total profit is: "+profit+"\nThe monthly payment is: "+cash;
         return c;
      }
   }
