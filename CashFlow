public class CashFlow 
   {
      private double profit, perdictingProfit, interest, cash, debt, amountInterest;
      private int debtPayDate;
      
       public CashFlow(double money)
       {
         cash = money;
         profit = 0;
         interest= 0;
         debt = 0;
         amountInterest = 0;
         debtPayDate = 0;
         predictingProfit = 0;
       }
       
       public void setProfit ()
      {
         profit = CashFlow.calculateProfit();
      }
   
       public double getProfit ()
      {
         return profit;
      }
      
      public void setPredictingProfit()
      {
         predictingProfit = CashFlow.calculatePredictingProfit();
      }
      
      public double getPredictingProfit()
      {
         return predictingProfit;
      }
      
       public double calculateProfit()
      {
         return Revenue.getAmount() - Expenditure.getTotal();
      }
   
      public double calcultePredictingProfit()
      {
         return Revenue.getAmount() - Budget.getTotal();
      }
       
       public double calculateCompoundInterest()
      {
         
      }
   
       public double calculateMonthlyPayment()
      {
         cash+= Math.pow((cash*(1+interest/MONTH)), interest*MONTH); 	//calculating the profit for each month 
         return cash;
      }
   
       public String toString()
      {
         String c= "The compound interest is: "+interest+"\nThe total profit is: "+profit+"\nThe monthly payment is: "+cash;
         return c;
      }
   }
