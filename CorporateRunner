  import java.util.*;
   import java.io.*;

    public class CorporateRunner 
   {
       public static void main(String[] args)
      {
         Scanner sc = new Scanner (System.in);
         Corporate p= new Corporate();
         double a= p.showExpenditure(time, month);
         System.out.println("Expenditure: \nYear: "+Corporate.getTodayYear()+"\nMonth: "+Corporate.getTodayMonth());
         double g= p.showRevenue(amount);
         System.out.println("Revenue: \nYear: "+Corporate.getTodayYear()+"\nMonth: "+Corporate.getTodayMonth()+"\nMoney: "+Revenue().money);
         double t= p.showBudget(year, month);
         System.out.println("Budget: \nYear; "+Corporate.getTodayYear()+"\nMonth: "+Corporate.getTodayMonth()+"\nTotalmoney: "+Budget.gettotal());
      	
         boolean b= p.createExpenditureFile();
         if (b== true)
         {
            System.out.println("The Expenditure file is created successfully.");
         }
         else
         {
            System.out.println("The Expenditure file is created unsuccessfully, please try again.");
         }
      	
         boolean c= p.createBudgetFile();
         if (c== true)
         {
            System.out.println("The Budget file is created successfully.");
         }
         else
         {
            System.out.println("The Budget file is created unsuccessfully.");
         }
      	
			System.out.println("Enter a category that you want to change: ");
			String category= sc.nextLine();
			
			boolean o= p.changeCategory(category, amount);
         if (o== false)
         {
            System.out.println("The category that you entered is not changed, please try again.");
         }
         else
         {
            System.out.println("The category that you entered is changed successfully.");
         }
         CashFlow u= new CashFlow();
         boolean j= u.checkEnoughCash();
         if (j== true)
         {
				System.out.println("The cash is enough for this company in this year.");
         }
         else
         {
				System.out.println("The cash is not enough for this company in this year.");
         }
         
         
      }
   } // CorporateRunner class
   
   
   
import java.util.*;
import java.io.*;

public class CorporateRunner 
{
   public static void main(String[] args)
   {
      Corporate whole= new Corporate();
      Scanner input = new Scanner (System.in);
         
         
      	
      boolean exit = false;
      int option = 1;
      int categoryNumber;
      String name1;
      String name2;
      double value1;
      double value2;
      int year=0, month=0;
      boolean confirm = false;
      int section1;
      int section2;
   		//Program for confirming outside current data and introduction
      System.out.println ("----Welcome to the Corporate Tracker---");
      System.out.println ("This program is designed to to keep track of records");
      System.out.println ("from the Corpotate Class");
      do
      {
         //User enters date in this section of the program
         System.out.println ("Before we start please enter the date:");
         try
         {
            System.out.println ("Year:");
            year = input.nextInt();
            System.out.println ("Month:");
            month = input.nextInt();
            if (month > 12 || month < 1)
            {
               System.out.println ("You have entered invalid Month please try again");
            }
            else
            {
               confirm = true;
            }
            
         }
         catch (InputMismatchException ex)
         {
            System.out.println ("You have not entered the year or month in the correct format");
            System.out.println ("Please try again");
            String flush = input.next();	
         }
      }while (confirm == false);
      whole.setTodayMonth (month);
      whole.setTodayYear (year);
      
      
      
   	//Menu Process for adding Departments and Modifying 
      confirm = false;
      do
      {
         try
         {
            confirm = true;
            System.out.println ("--------------Menu-------------");
            System.out.println ("Option 1: Manage Departments Input 1");
            System.out.println ("Option 2: Overview Report Input 2");
            System.out.println ("Option 3: Manage Projects Input 3");
            System.out.println ("Option 4: Manage Revenue Input 4");
            System.out.println ("Option 5: Exit the program Input 5");
            option = input.nextInt ();
         }
         catch (InputMismatchException ex)
         {
            System.out.println ("Invalid input format try again");
            String flush = input.next();
            confirm = false;
         }
      }while (confirm == false);
      
      confirm = false;
   	//Manage Department Option
      if (option == 1)
      {
         do
         {
            try
            {
               confirm = true;
