    public class Project
   {
      private String name;
      private double budget, amount;
      private boolean success;
      private int year;
      private int month;
   
       public Project(String name1, double bud, double startFund)
      {
        name = name1;
        budget = bud;
        amount = startFund;
        success = false;
        year = Corperate.getTodayYear();
        month = Corperate.getTodayMonth();
      }
      
      public void addAmount(double fund) {
        amount += fund;
      }
      
      public void changeSuccess() {
        if (amount >= budget)
        {
            success = true;
            }
      }
    
      public void saveInfo() {
         try
         {
            BufferedWriter in= new BufferedWriter(new BufferedWriter(new FileWriter("Department.txt")));
            for (int i= 0; i < projectList; i++)
            {
               in.write(name);
               in.newLine();
               in.write(date);
               in.newLine();
               in.write(budget);
               in.close();
            }
         }
             catch (IOException iox)
            {
               System.out.println("Problem loading file.");
            }

      }
   }
