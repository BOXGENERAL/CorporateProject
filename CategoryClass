*/

class Category
{
	private String name;
	private double amount;
	//Constructor Method
	public Category (String name, double amount)
	{
		this.name = name;
		this.amount = amount;
	}
	//Changes the amount of money in the Category
	public void setAmount (double money)
	{
		this.amount = money; 
	}
	//Returns the value of the amount in double
	public double getAmount ()
	{
		return amount;
	}
	//Returns the name of the Category in String
	public String getName ()
	{
		return name;
	}
	//Displays the information in the Category to String
	public String toString ()
	{
		return ("Name: " + name + "Amount " + amount);
	}
}//Category.class
