				departmentRank[j] = departmentRank[j-1];
				j = j - 1;
			}
			
			expenditureRank[j] = temp;
			departmentRank[j] = temp2;
		}
		
		try
		{
			BufferedWriter in = new BufferedWriter(new FileWriter("expenditureReport.txt", true));
			
